<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_track"
    android:layout_margin="@dimen/four_dp"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/four_dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/eight_dp">

        <com.edfora.sunny.edfora.utils.CircleImageView
            android:id="@+id/iv_track_image"
            android:layout_width="@dimen/eighty_dp"
            android:layout_height="@dimen/eighty_dp"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_track_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Bring it on"
            android:layout_marginTop="@dimen/eight_dp"
            android:layout_marginLeft="@dimen/eight_dp"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:layout_toRightOf="@id/iv_track_image" />

        <ImageView
            android:id="@+id/iv_track_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/ic_media_play" />
        <ImageView
            android:id="@+id/iv_track_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/iv_track_play"
            android:src="@android:drawable/star_on" />

        <TextView
            android:id="@+id/tv_track_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Small"
            tools:text="50 Cent ft. Eminem"
            android:ellipsize="end"
            android:layout_alignLeft="@id/tv_track_title"
            android:layout_toRightOf="@id/iv_track_image"
            android:layout_toLeftOf="@id/iv_track_fav"
            android:layout_below="@id/tv_track_title" />


    </RelativeLayout>
</android.support.v7.widget.CardView>