<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StylePlayer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/forty_eight</item>
        <item name="android:minWidth">@dimen/forty_eight</item>
        <item name="android:layout_marginLeft">@dimen/eight_dp</item>
        <item name="android:layout_marginRight">@dimen/eight_dp</item>
    </style>

</resources>
